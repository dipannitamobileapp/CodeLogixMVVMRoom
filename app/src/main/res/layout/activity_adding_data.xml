<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddingDataActivity">

    <ImageView
        android:layout_width="30dip"
        android:id="@+id/backbtn"
        android:src="@drawable/backtwo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dip"
        android:layout_height="30dip"/>

<TextView
    android:id="@+id/addnote"
    android:layout_width="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:textStyle="bold"
    android:textSize="22sp"
    android:text="Add Note"
    android:textColor="#000000"
    android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:id="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/addnote"
        android:layout_marginTop="3dip"
        android:background="#cacaca"
        />
    <EditText
        app:layout_constraintTop_toBottomOf="@+id/divider"
        android:layout_width="match_parent"
        android:id="@+id/titlet"
        android:textSize="20sp"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:hint="Note Title Here"
        android:layout_height="wrap_content"/>

    <EditText
        app:layout_constraintTop_toBottomOf="@+id/titlet"
        android:layout_width="match_parent"
        android:id="@+id/descet"
        android:textSize="16sp"
        android:hint="Start writing your note here"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="20dip"
        app:srcCompat="@drawable/tick"
        tools:layout_editor_absoluteX="310dp"
        tools:layout_editor_absoluteY="644dp" />
</androidx.constraintlayout.widget.ConstraintLayout>